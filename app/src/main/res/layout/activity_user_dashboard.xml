<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:id="@+id/userDashboardLayout"
    tools:context=".UserDashboard">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dashboard"
            android:textSize="24dp"
            android:fontFamily="@font/roboto_bold"
            android:textColor="#5e5e5e"/>

        <View
            android:layout_width="40dp"
            android:layout_height="9dp"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:background="@drawable/bg_view">

        </View>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:fontFamily="@font/roboto"
        android:textColor="#5e5e5e"
        android:text="As simple as a single of a click!"/>

    <androidx.cardview.widget.CardView
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="195dp"
            android:background="@drawable/dashboardbackground"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium_italic"
                    android:text="Welcome back, Aiman!"
                    android:textColor="@color/white"
                    android:textSize="16dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imgCloud"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/ic_cloud" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvCity"
                    android:layout_width="287dp"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Kuala Lumpur"
                    android:textColor="@color/white"
                    android:textSize="17dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/tvDeviceLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:backgroundTint="@color/white"
                        android:elevation="20dp"
                        android:src="@drawable/ic_devicenavigation" />
                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvLat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Latitude"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/valueLat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textColor="@color/white"
                        android:textSize="20dp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvLong"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Longitude"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/valueLong"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textColor="@color/white"
                        android:textSize="20dp" />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:fontFamily="@font/roboto"
        android:text="View Status"
        android:textColor="#5e5e5e"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/clickLock"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:layout_width="70dp"
            app:cardCornerRadius="2dp"
            android:elevation="100dp"
            android:layout_weight="1"
            app:cardBackgroundColor="#E2E8EC"
            android:layout_height="120dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:padding="8dp"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="46dp"
                    android:layout_height="35dp"
                    android:layout_above="@+id/tvLock"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="47dp"
                    android:layout_marginBottom="8dp"
                    android:src="@drawable/lockcar" />

                <TextView
                    android:id="@+id/tvLock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="70dp"
                    android:layout_marginBottom="33dp"
                    android:gravity="center"
                    android:text="Lock"
                    android:textColor="#5e5e5e"
                    android:textSize="15dp" />

                <View
                    android:layout_width="match_parent"
                    android:foregroundGravity="center"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:background="#BBC4C8"
                    android:layout_marginTop="10dp"
                    android:layout_height="2dp"
                    android:layout_marginBottom="28dp" />

                <TextView
                    android:id="@+id/lockStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="58dp"
                    android:layout_marginBottom="8dp"
                    android:textAllCaps="true"
                    android:text="Inactive" />


            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/clickUnlock"
            android:layout_width="70dp"
            app:cardCornerRadius="2dp"
            app:cardElevation="10dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            app:cardBackgroundColor="#E2E8EC"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"

            android:layout_height="120dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:padding="8dp"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="46dp"
                    android:layout_height="35dp"
                    android:layout_above="@+id/tvUnlock"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="47dp"
                    android:layout_marginBottom="8dp"
                    android:src="@drawable/unlockcar" />

                <TextView
                    android:id="@+id/tvUnlock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="60dp"
                    android:layout_marginBottom="33dp"
                    android:gravity="center"
                    android:text="Unlock"
                    android:textColor="#5e5e5e"
                    android:textSize="15dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:background="#BBC4C8"
                    android:layout_height="2dp"
                    android:layout_marginBottom="28dp" />

                <TextView
                    android:id="@+id/unlockStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="58dp"
                    android:layout_marginBottom="8dp"
                    android:textAllCaps="true"
                    android:text="Inactive" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/clickEngineOn"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:layout_width="70dp"
            app:cardCornerRadius="2dp"
            app:cardElevation="10dp"
            app:cardBackgroundColor="#E2E8EC"
            android:layout_weight="1"
            android:layout_height="120dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:padding="8dp"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="46dp"
                    android:layout_height="35dp"
                    android:layout_above="@+id/tvEngineOn"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="47dp"
                    android:layout_marginBottom="8dp"
                    android:src="@drawable/engineon" />

                <TextView
                    android:id="@+id/tvEngineOn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="50dp"
                    android:layout_marginBottom="33dp"
                    android:gravity="center"
                    android:text="Engine On"
                    android:textColor="#5e5e5e"
                    android:textSize="15dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:background="#BBC4C8"
                    android:layout_marginBottom="28dp" />

                <TextView
                    android:id="@+id/engineOnStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="58dp"
                    android:textAllCaps="true"
                    android:layout_marginBottom="8dp"
                    android:text="Inactive" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/clickEngineOff"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:layout_width="70dp"
            app:cardCornerRadius="2dp"
            app:cardElevation="10dp"
            app:cardBackgroundColor="#E2E8EC"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_height="120dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:padding="8dp"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="46dp"
                    android:layout_height="35dp"
                    android:layout_above="@+id/tvEngineOff"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="47dp"
                    android:layout_marginBottom="8dp"
                    android:src="@drawable/engineoff" />

                <TextView
                    android:id="@+id/tvEngineOff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="50dp"
                    android:layout_marginBottom="33dp"
                    android:gravity="center"
                    android:text="Engine Off"
                    android:textColor="#5e5e5e"
                    android:textSize="15dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:background="#BBC4C8"
                    android:layout_marginBottom="28dp" />

                <TextView
                    android:id="@+id/engineOffStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="58dp"
                    android:layout_marginBottom="8dp"
                    android:textAllCaps="true"
                    android:text="Inactive" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/clickTrack"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:layout_width="70dp"
            app:cardCornerRadius="2dp"
            app:cardElevation="10dp"
            app:cardBackgroundColor="#E2E8EC"
            android:layout_weight="1"
            android:layout_height="120dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:padding="8dp"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="46dp"
                    android:layout_height="35dp"
                    android:layout_above="@+id/tvNavigate"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="47dp"
                    android:layout_marginBottom="8dp"
                    android:src="@drawable/carnavigation" />

                <TextView
                    android:id="@+id/tvNavigate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="160dp"
                    android:layout_marginBottom="33dp"
                    android:gravity="center"
                    android:text="Track"
                    android:textColor="#5e5e5e"
                    android:textSize="15dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:background="#BBC4C8"

                    android:layout_marginBottom="28dp" />

                <TextView
                    android:id="@+id/trackStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="160dp"
                    android:gravity="center"
                    android:layout_marginBottom="8dp"
                    android:textAllCaps="true"
                    android:text="Inactive" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floatingActionButtonSettings"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_width="128dp"
            android:layout_marginTop="5dp"
            android:layout_height="match_parent"
            android:layout_marginStart="309dp"
            android:backgroundTint="#E2E8EC"
            android:clickable="true"
            app:srcCompat="@drawable/settings" />


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/notificationbutton"
            android:layout_width="128dp"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp"
            android:backgroundTint="#E2E8EC"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            app:srcCompat="@drawable/ic_notification"/>
    </RelativeLayout>


</LinearLayout>